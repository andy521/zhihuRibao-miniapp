.list-item{
    width: 90%;
    margin:20rpx 2%;
    padding: 5px 10px 6px;
    border-radius: 5rpx;
    border-bottom: 1px solid rgba(0,0,0,1);
}

.header-cover {
    position: relative;
    height: 500rpx;
    overflow: hidden
}
.header-cover image {
    width: 100%;
}
.header-cover .mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    background: rgba(0, 0, 0, .3);
}
.header-cover .desc {
    position: absolute;
    left: 0;
    bottom: 0;
    padding: 0 20rpx 60rpx 20rpx;
    font-size: 40rpx;
    color: #FFF;
    z-index: 10
}

.editors {
    padding: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #FAFAFA;
}
.editors text,
.editors image {
    float: left
}
.editors text {
    color: #AAA;
    margin-right: 40rpx;
    font-size: 30rpx;
}
.editors image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}